{% extends 'base.html.twig' %}

{# Bloc de titre : définit le titre de la page Contact #}
{% block title %}Contact{% endblock %}

{# Bloc body : contient le contenu principal de la page de contact #}
{% block body %}
<div class="container mx-auto px-6 py-8">
    {# Section principale avec un fond blanc, un padding et une ombre pour un effet de carte #}
    <section class="bg-white p-6 rounded-lg shadow-md">
        {# Titre de la section de contact #}
        <h2 class="text-2xl font-semibold mb-4">Contactez-nous</h2>

        {# Affichage des messages flash de succès, le cas échéant #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {# Formulaire de contact avec méthode POST, dirigé vers la route 'contact_submit' #}
        <form action="{{ path('contact_submit') }}" method="POST" class="space-y-4">
            {# Champ "Nom et prénom" avec label et input text #}
            <div>
                <label for="name" class="block text-gray-700">Nom et prénom :</label>
                <input type="text" name="name" id="name" class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" required>
            </div>

            {# Champ "Email" avec label et input email #}
            <div>
                <label for="email" class="block text-gray-700">Email :</label>
                <input type="email" name="email" id="email" class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" required>
            </div>

            {# Champ "Message" avec label et textarea pour saisir le contenu du message #}
            <div>
                <label for="message" class="block text-gray-700">Message :</label>
                <textarea name="message" id="message" rows="5" class="w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" required></textarea>
            </div>

            {# Bouton de soumission du formulaire #}
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Envoyer</button>
        </form>
    </section>
</div>
{% endblock %}
