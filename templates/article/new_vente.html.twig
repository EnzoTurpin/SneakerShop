{# templates/article/new_vente.html.twig #}
{% extends 'base.html.twig' %}

{# Bloc de titre : définit le titre de la page pour ajouter une annonce #}
{% block title %}Ajouter votre annonce{% endblock %}

{# Bloc body : contient le formulaire pour ajouter une annonce de vente #}
{% block body %}
<div class="max-w-4xl mx-auto p-6">
  {# Titre principal de la page #}
  <h1 class="text-3xl font-bold mb-6">Ajouter votre annonce</h1>
  
  {# Début du formulaire, désactivation de Turbo pour éviter les interférences et ajout de classes pour la mise en page #}
  {{ form_start(form, {'attr': {'data-turbo': 'false', 'class': 'space-y-6'}}) }}
  
    {# Grille contenant les différents champs du formulaire #}
    <div class="grid grid-cols-1 gap-4">
      {# Champ "nom" de l'annonce #}
      {{ form_row(form.nom, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "prix" de l'annonce #}
      {{ form_row(form.prix, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "tailles" disponibles pour l'article #}
      {{ form_row(form.tailles, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "brand" : marque de l'article #}
      {{ form_row(form.brand, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "quantite" : quantité disponible #}
      {{ form_row(form.quantite, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "etat" : état de l'article (neuf/occasion) #}
      {{ form_row(form.etat, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Section pour la case à cocher "nouveaute" avec libellé associé #}
      <div class="flex items-center">
        {{ form_row(form.nouveaute, {'attr': {'class': 'mr-2'}}) }}
        <span>Nouvelle paire ?</span>
      </div>
      
      {# Champ de téléchargement d'image #}
      {{ form_row(form.imageFile, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "description" de l'annonce #}
      {{ form_row(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
      
      {# Champ "type" de l'annonce (catégorie, etc.) #}
      {{ form_row(form.type, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}}) }}
    </div>
    
    {# Bouton de soumission du formulaire #}
    <button type="submit" class="mt-6 w-full bg-blue-600 text-white font-semibold py-2 rounded">
      Ajouter mon annonce
    </button>
    
  {# Fin du formulaire #}
  {{ form_end(form) }}
</div>
{% endblock %}
