{# templates/article/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un Article{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Ajouter un Article</h1>
  {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="grid grid-cols-1 gap-4">
      {{ form_row(form.nom, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
      {{ form_row(form.prix, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
      {{ form_row(form.tailles, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
      {{ form_row(form.brand, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
      {# Pour la case à cocher, on peut ajouter une classe si nécessaire, sinon le rendu par défaut est suffisant #}
      <div class="flex items-center">
        {{ form_row(form.nouveaute) }}
        <span class="ml-2">Nouvelle paire ?</span>
      </div>
      {{ form_row(form.imageFile, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
      {{ form_row(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
    </div>
    <button type="submit" class="mt-6 w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition-colors">
      Ajouter
    </button>
  {{ form_end(form) }}
</div>
{% endblock %}
