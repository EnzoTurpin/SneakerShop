{% extends 'base.html.twig' %}

{# Définition du titre de la page #}
{% block title %}Inscription{% endblock %}

{# Contenu principal : formulaire d'inscription avec liens vers la page de connexion #}
{% block body %}
<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
  <h1 class="text-2xl font-bold mb-4 text-center">Créer un compte</h1>
  
  {# Démarrage du formulaire avec des classes CSS pour le style #}
  {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
    {# Champ Email #}
    {{ form_row(registrationForm.email, {
      'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}
    }) }}
    
    {# Champ Nom d'utilisateur #}
    {{ form_row(registrationForm.username, {
      'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}
    }) }}
    
    {# Champ Mot de passe #}
    {{ form_row(registrationForm.plainPassword, {
      'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded'}
    }) }}
    
    {# Bouton de soumission #}
    <button class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors">
      S'inscrire
    </button>
  {{ form_end(registrationForm) }}
  
  {# Lien vers la page de connexion #}
  <p class="mt-4 text-center">
    Vous avez déjà un compte ? 
    <a href="{{ path('app_login') }}" class="text-blue-600 underline">Connectez-vous ici</a>.
  </p>
</div>
{% endblock %}
