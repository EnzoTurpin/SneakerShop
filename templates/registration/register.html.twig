{% extends 'base.html.twig' %} {% block title %} Inscription {% endblock %} {%
block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold text-center mb-6">Créer un compte</h2>

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

    <div>
      {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'block font-medium'

      }}) }}
      {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'

      }}) }}
      {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-sm'

      }}) }}
    </div>

    <div>
      {{ form_label(registrationForm.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block font-medium'

      }}) }}
      {{ form_widget(registrationForm.username, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'

      }}) }}
      {{ form_errors(registrationForm.username, {'attr': {'class': 'text-red-500 text-sm'

      }}) }}
    </div>

    <div>
      {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block font-medium'

      }}) }}
      {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'

      }}) }}
      {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-sm'

      }}) }}
    </div>

    <button
      type="submit"
      class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition"
    >
      S'inscrire
    </button>

    {{ form_end(registrationForm) }}

    <p class="text-center text-gray-600 mt-4">
      Déjà un compte ?
      <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline"
        >Connectez-vous ici</a
      >
    </p>
  </div>
</div>
{% endblock %}
